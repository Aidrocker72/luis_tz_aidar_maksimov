{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["@types/node"],
    "allowJs": true
  },
  "include": [
    "types/**/*.d.ts",
    "**/*.ts",
    "**/*.vue"
  ]
}

